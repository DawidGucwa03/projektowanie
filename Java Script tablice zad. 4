<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title> Document</title>
    </head>
    <body>
        <div class = "tablica"></div>
        <div class = "suma"></div>
        <div class = "ileZer"></div>
        <script>
function getRandomIntInclusive(min,max){
    min = Math.ceil(min);
    max = Math.floor(max);
    return Math.floor(Math.random() * (max - min + 1)) + min;
}
const divTablica = document.querySelector('div.tablica');
const divSuma = document.querySelector('div.suma');
const divIleZer = document.querySelector('div.ileZer');

const liczby = [];
let suma = 0;
let ileZer = 0;

for (let i = 0; i < 100; i++){
    liczby[i] = getRandomIntInclusive(0,100);
    suma += liczby[i];
}
for (const liczba of liczby) {
    if (liczba == 0) ileZer++;
}

divTablica.textContent = liczby.join(', ');
divSuma.textContent = 'Suma liczby tablic wynosi: ' + suma;
divIleZer.textContent = 'Liczba 0 w tablicy wystepuje: ' + ileZer + ' razy' ;
        </script>
    </body>
</html>
